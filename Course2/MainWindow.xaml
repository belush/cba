<Window x:Class="cba.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Расчет биологической активности" Height="652.61" Width="525" WindowStartupLocation="CenterScreen">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250*" />
            <ColumnDefinition Width="267*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="21" />
            <RowDefinition Height="137" />
            <RowDefinition />
            <RowDefinition Height="187" />
            <RowDefinition Height="40" />
            <RowDefinition Height="44" />

        </Grid.RowDefinitions>
        <Grid Name="gridTop" Background="White" Grid.Row="1" Grid.ColumnSpan="2">
            <ComboBox SelectionChanged="comboBoxN_SelectionChanged" Name="comboBoxN" HorizontalAlignment="Left"
                      Margin="149,37,0,0" VerticalAlignment="Top" Width="47" />
            <Button Name="buttonFill" Content="Заполнить" HorizontalAlignment="Left" Margin="206,11,0,0"
                    VerticalAlignment="Top" Width="160" Height="21" Click="buttonFill_Click" Background="White"  />
            <Button Name="buttonCulc" Content="СЧИТАТЬ" HorizontalAlignment="Left" Margin="206,36,0,0"
                    VerticalAlignment="Top" Width="160" Height="51" Click="buttonCulc_Click" Foreground="#FFFFFF" Background="#4B8DF8" />
            <TextBox Name="textBoxMO" HorizontalAlignment="Left" Height="23" Margin="149,64,0,0" TextWrapping="Wrap"
                     Text="50000" VerticalAlignment="Top" Width="47" />
            <Button Name="buttonSaveGraph" Content="Информация" Click="buttonSaveGraph_Click"
                    HorizontalAlignment="Left" Margin="378,36,0,0" VerticalAlignment="Top" Width="122" Height="23"
                    Background="#F4F4F4" IsEnabled="False" />
            <ComboBox Name="comboBoxNumberOfSeries" SelectionChanged="comboBoxNumberOfSeries_SelectionChanged"
                      HorizontalAlignment="Left" Margin="149,10,0,0" VerticalAlignment="Top" Width="47" />
            <Button Name="buttonMakeReport" Content="Сохранить отчет" HorizontalAlignment="Left" Margin="378,64,0,0"
                    Background="#F4F4F4" VerticalAlignment="Top" Width="122" Click="buttonMakeReport_Click" Height="23"
                     IsEnabled="False" />
            <TextBox Name="textBoxSeriesName1" HorizontalAlignment="Left" Height="23" Margin="63,102,0,0"
                     TextWrapping="Wrap" Text="Серия 1" VerticalAlignment="Top" Width="100" />
            <TextBox Name="textBoxSeriesName2" HorizontalAlignment="Left" Height="23" Margin="168,102,0,0"
                     TextWrapping="Wrap" Text="Серия 2" VerticalAlignment="Top" Width="100" />
            <TextBox Name="textBoxSeriesName3" HorizontalAlignment="Left" Height="23" Margin="273,102,0,0"
                     TextWrapping="Wrap" Text="Серия 3" VerticalAlignment="Top" Width="100" />
            <Button Name="buttonRename" Content="Переименовать" HorizontalAlignment="Left" Margin="378,102,0,0"
                    Background="#F4F4F4" VerticalAlignment="Top" Width="122" Click="buttonRename_Click" Height="23"  />
            <Label Content="Количество серий" HorizontalAlignment="Left" Margin="10,11,0,0" VerticalAlignment="Top"
                   RenderTransformOrigin="0.263,0.115" />
            <Label Content="Количество животных" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" />
            <Label Content="Количество МЕ" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" />
        </Grid>
        <Canvas SizeChanged="canvasGraph_SizeChanged" Name="canvasGraph" Grid.Row="3" Background="White"
                Grid.ColumnSpan="2" />
        <Grid Grid.Row="2" Grid.ColumnSpan="2">
            <TabControl Name="tabControl">
                <TabItem Name="tabControlItemA" Header="Серия 1" Background="#FF94A6FF">
                    <Grid Background="White">
                        <DataGrid Name="dataGridA" Background="White" />
                    </Grid>
                </TabItem>
                <TabItem Name="tabControlItemB" Header="Серия 2" Background="#FFF9FF7B">
                    <Grid Background="White">
                        <DataGrid Name="dataGridB" Background="#FFFDFFEE" />
                    </Grid>
                </TabItem>
                <TabItem Name="tabControlItemC" Header="Серия 3" Background="#FF93FF83">
                    <Grid Background="White">
                        <DataGrid Name="dataGridC" Background="White" />
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
        <Grid Grid.Row="5" Background="#F5F5F5" Grid.ColumnSpan="2" Margin="0,10,0,0">
            <Label Name="labelAnswer" Content="" HorizontalAlignment="Left" Width="481" FontSize="14" />
        </Grid>
        <Menu Grid.ColumnSpan="2">
            <MenuItem Name="menuItemFile" Header="Файл">
                <MenuItem Name="menuItemFileNew" Header="Новый" Click="menuItemFileNew_Click" />
                <Separator />
                <MenuItem Name="menuItemFileSave" Header="Сохранить" Click="buttonSave_Click" />
                <MenuItem Name="menuItemFileSaveAs" Header="Сохранить как" Click="buttonSaveAs_Click" />
                <Separator />
                <MenuItem Name="menuItemFileLoad" Header="Загрузить" Click="buttonLoad_Click" />
                <MenuItem Name="menuItemFileLoadAs" Header="Загрузить как" Click="buttonLoadAs_Click" />
                <Separator />
                <MenuItem Name="menuItemFileExit" Header="Выход" Click="menuItemFileExit_Click" />
            </MenuItem>
            <MenuItem Name="menuItemAction" Header="Работа">
                <MenuItem Name="menuItemActionAnalise" Header="Считать" Click="buttonCulc_Click" />
                <MenuItem Name="menuItemActionSaveReport" Header="Сохранить отчет" Click="buttonMakeReport_Click" />
            </MenuItem>
            <MenuItem Header="Справка">
                <MenuItem Name="menuItemHelp" Header="Помощь" Click="menuItemHelp_Click" />
                <MenuItem Name="menuItemAbout" Header="О программе" Click="menuItemAbout_Click" />
            </MenuItem>
        </Menu>
        <Grid Name="gridInstruction" Grid.Row="4" Grid.ColumnSpan="2">
            <Label Name="labelInstr1" Content="- Серия 1" HorizontalAlignment="Left" Margin="51,4,0,0"
                   VerticalAlignment="Top" />
            <Label Name="labelInstr2" Content="- Серия 2" HorizontalAlignment="Left" Margin="206,4,0,0"
                   VerticalAlignment="Top" />
            <Label Name="labelInstr3" Content="- Серия 3" HorizontalAlignment="Left" Margin="349,4,0,0"
                   VerticalAlignment="Top" />
            <Ellipse Fill="#FF8888FF" HorizontalAlignment="Left" Height="20" Margin="26,10,0,0" Stroke="Black"
                     VerticalAlignment="Top" Width="20" />
            <Ellipse Fill="#FFE8FD64" HorizontalAlignment="Left" Height="20" Margin="181,10,0,0" Stroke="Black"
                     VerticalAlignment="Top" Width="20" />
            <Ellipse Fill="#FF79FF64" HorizontalAlignment="Left" Height="20" Margin="324,10,0,0" Stroke="Black"
                     VerticalAlignment="Top" Width="20" />
        </Grid>

    </Grid>
</Window>